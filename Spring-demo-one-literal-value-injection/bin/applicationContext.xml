<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <!-- load the file -->
	<context:property-placeholder location="classpath:sport.properties" />
	
    <!-- Define your beans here -->
    
    <bean id="myFortune" class="com.learn.springdemo.FortuneServiceImpl">
    </bean>
    
    
    <bean id="baseballCoach"
    		class="com.learn.springdemo.BaseballCoach">
    		<property name="fortuneService" ref="myFortune" />
    	</bean>
    
 	<bean id="trackCoach"
 		class="com.learn.springdemo.TrackCoach">
 		<property name="fortuneService" ref="myFortune" />
 		<property name="name" value="${coach.name}" />
 		<property name="emailAddress" value="${coach.email}" />
 	</bean>



</beans>





